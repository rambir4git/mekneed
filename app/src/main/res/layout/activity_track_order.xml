                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/div_7"
                    android:layout_below="@id/root_ll6"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"

                    android:background="@drawable/gradient_bottom" />

