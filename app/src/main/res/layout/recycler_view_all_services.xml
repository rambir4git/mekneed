<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="16dp"
                    android:background="@color/search_hint"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00th July,0000"
                        style="@style/booking_order"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 PM"
                        style="@style/booking_order"/>


                </LinearLayout>

                <!--Main Content-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#123"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4"/>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/model_logo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_asset_7"/>

                        <TextView
                            android:id="@+id/model"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@id/model_logo"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="MekGroceries"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/payment_confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Payment Confirmed "
                                android:textColor="@color/background4"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/payment_confirm_tick"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/tick_light" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/plate_no"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_book_regular"
                            android:text="DL1PB3201"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/service_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="44dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/gotham_book_regular"
                            android:text="Service Type"
                            android:textColor="@color/red_dark"
                            android:textSize="12sp" />



                    </LinearLayout>

                    <View
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="@dimen/text_size16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/service_status"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Service status"
                            android:textColor="@color/yellow"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/pin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/licence_plate"
                            android:text="PIN : 0000"
                            style="@style/pin"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background4" />

                <!--Buttons1-->
                <LinearLayout
                    android:id="@+id/button_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/connect"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/button_style_1"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/phone_white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connect"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="13sp"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/remove"
                        style="@style/button_style_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="Cancel" />

                </LinearLayout>

                <TextView
                    android:id="@+id/need_help"
                    android:layout_marginTop="8dp"
                    style="@style/button_style_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="Need Help ?"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/service_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_border"
            android:padding="10dp"
            android:src="@drawable/ic_asset_6" />


    </FrameLayout>





</FrameLayout>
