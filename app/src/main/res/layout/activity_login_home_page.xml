<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupAndLogin.Login.LoginHomePage">

    <!-- Background-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--background blank spaces and faq-->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:background="@drawable/asset_logintop" />

            <!--Blank for giving gap-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/text_size40dp"
            android:src="@mipmap/covid" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="132dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>